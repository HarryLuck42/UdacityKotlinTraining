<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/titleWordFragment">
    <fragment
        android:id="@+id/titleWordFragment"
        android:name="com.corp.luqman.kotlintraining.lesson5.screens.title.TitleWordFragment"
        android:label="TitleWordFragment"
        tools:layout="@layout/fragment_title_word">
        <action
            android:id="@+id/action_title_to_game"
            app:destination="@id/game_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/game_destination"
        android:name="com.corp.luqman.kotlintraining.lesson5.screens.game.GameWordFragment"
        android:label="GameWordFragment"
        tools:layout="@layout/fragment_game_word">
        <action
            android:id="@+id/action_game_to_score"
            app:destination="@id/score_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/titleWordFragment" />
    </fragment>
    <fragment
        android:id="@+id/score_destination"
        android:name="com.corp.luqman.kotlintraining.lesson5.screens.score.ScoreFragment"
        android:label="ScoreFragment"
        tools:layout="@layout/score_fragment">
        <action
            android:id="@+id/action_restart"
            app:destination="@id/game_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@+id/title_destination"/>
        <argument
            android:name="score"
            app:argType="integer" />
    </fragment>
</navigation>